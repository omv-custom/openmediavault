@use 'sass:color';
@use 'scss/defaults/colors' as dc;
@use 'scss/defaults/variables' as dv;
@use 'scss/theme';

omv-login-page {


.blank-layout-container {
  height: 100vh;
  display: flex;
  background-size: cover;
  align-items: center;
}

.mat-sidenav-content {
  margin-left: 0px !important;
}

.justify-content-center {
  justify-content: center !important;
  display: flex;
}

.row {
  display: flex;
  flex-wrap: wrap;
  margin-right: -15px;
  margin-left: -15px;
}
.position-relative {
  position: relative;
}
.h-100 {
  height: 100%;
}
.w-100 {
  width: 100%;
}
.p-0 {
  padding: 0 !important;
}
.p-24 {
  padding: 24px !important;
}
.h-100 {
  height: 100%;
}
.img-height {
  height: calc(100vh - 96px);
}
.align-items-center {
  align-items: center !important;
}
.justify-content-center {
  justify-content: center !important;
}
.d-none {
  display: none !important;
}
*, ::after, ::before {
  box-sizing: border-box;
}
.d-flex {
  display: flex !important;
}
.max-width-form {
  max-width: 450px;
}
.f-w-700 {
  font-weight: 700 !important;
}
.f-s-24 {
  font-size: 24px !important;
}
.m-0 {
  margin: 0 !important;
}
.f-w-500 {
  font-weight: 500 !important;
}
.m-t-10 {
  margin-top: 10px !important;
}
.d-block {
  display: block !important;
}
.m-t-30 {
  margin-top: 30px !important;
}
.w-100 {
  width: 100%;
}
.mat-mdc-text-fields-wrapper {
  width: 100%;
  z-index: 0;
}
.mat-mdc-text-fields-wrapper {
  height: auto;
  flex: auto;
  will-change: auto;
}
.mdc-text-fields--outlined {
  height: 56px;
  overflow: visible;
  padding-right: max(16px,var(--mdc-outlined-text-field-container-shape, var(--mat-sys-corner-extra-small)));
  padding-left: max(16px,var(--mdc-outlined-text-field-container-shape, var(--mat-sys-corner-extra-small)) + 4px);
}
.mdc-text-fields {
  display: inline-flex;
  align-items: baseline;
  /*! padding: 0 16px; */
    padding-right: 16px;
    padding-left: 16px;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
  will-change: opacity,transform,color;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.mat-mdc-form-fields-subscript-wrapper {
  box-sizing: border-box;
  width: 100%;
  position: relative;
}
.bg-gredient:before{content:"";position:absolute;height:100%;width:100%;opacity:.3;background:radial-gradient(#d2f1df,#d3d7fa,#bad8f4) 0% 0%/400% 400%;animation:15s ease 0s infinite normal none running gradient;z-index:-1}

.mdc-card {
  display: contents !important;
  flex-direction: column;
  box-sizing: border-box;
}

}

@media (min-width: 1100px) {
  body .align-items-lg-center {
    align-items: center !important;
  }
  body .d-lg-flex {
    display: flex !important;
  }
  .col-lg-7 {
    flex: 0 0 58.3333333333%;
    max-width: 58.3333333333%;
  }
}
